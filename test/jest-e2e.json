{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testRegex": "test/.*\\.e2e-spec\\.ts$",

  "testEnvironment": "node",

  "transform": {
    "^.+\\.(t|j)s$": ["ts-jest", { "tsconfig": "test/tsconfig.e2e.json" }]
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1",
    "^@/(.*)$": "<rootDir>/src/$1"
  }
}
