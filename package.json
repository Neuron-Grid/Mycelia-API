{
	"name": "mycelia-api",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "Apache-2.0",
	"scripts": {
		"build": "nest build",
		"format": "biome check --write ./src",
		"openapi:gen": "nestia swagger",
		"start": "node dist/main.js",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"scan:npm": "npm audit --production --audit-level=high --json",
		"scan:semgrep": "npx semgrep --config p/owasp-top-ten --error",
		"scan:trivy": "trivy fs --scanners vuln,secret,config .",
		"scan:gitleaks": "gitleaks detect -v --source .",
		"scan:all": "npm run scan:npm && npm run scan:semgrep && npm run scan:trivy && npm run scan:gitleaks",
		"types:generate": "supabase gen types --local > src/types/schema.d.ts",
		"types:linked": "supabase gen types --linked > src/types/schema.d.ts",
		"types:clean": "supabase gen types --local --schema public > src/types/schema.d.ts"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.879.0",
		"@aws-sdk/s3-request-presigner": "^3.879.0",
		"@google-cloud/text-to-speech": "6.3.0",
		"@google/generative-ai": "^0.24.1",
		"@nestjs/axios": "^4.0.1",
		"@nestjs/bullmq": "^11.0.3",
		"@nestjs/common": "^11.1.6",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.1.6",
		"@nestjs/platform-express": "^11.1.6",
		"@nestjs/schedule": "^6.0.0",
		"@nestjs/swagger": "^11.2.0",
		"@nestjs/throttler": "^6.4.0",
		"@nestjs/typeorm": "^11.0.0",
		"@supabase/supabase-js": "^2.56.1",
		"@types/feedparser": "^2.2.8",
		"@types/uuid": "^10.0.0",
		"axios": "^1.11.0",
		"bullmq": "^5.58.4",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"cookie-parser": "^1.4.7",
		"exponential-backoff": "^3.1.2",
		"feedparser": "^2.2.10",
		"file-type": "^21.0.0",
		"helmet": "^8.1.0",
		"ioredis": "^5.7.0",
		"js-yaml": "^4.1.0",
		"node-fetch": "^3.3.2",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2",
		"sanitize-markdown": "^2.6.7",
		"swagger-ui-express": "^5.0.1",
		"typeorm": "^0.3.26",
		"uuid": "^11.1.0"
	},
	"devDependencies": {
		"@esbuild-kit/esm-loader": "^2.6.5",
		"@nestia/sdk": "^8.0.0",
		"@nestjs/cli": "^11.0.10",
		"@nestjs/testing": "^11.1.6",
		"@swc/cli": "^0.7.8",
		"@swc/core": "^1.13.5",
		"@types/axios": "^0.14.4",
		"@types/cookie-parser": "^1.4.9",
		"@types/express": "^5.0.3",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.3.0",
		"@types/node-fetch": "^2.6.13",
		"@types/supertest": "^6.0.3",
		"jest": "^30.1.1",
		"nestia": "^8.0.0",
		"supertest": "^7.1.4",
		"ts-jest": "^29.4.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node",
		"moduleNameMapper": {
			"^src/(.*)$": "<rootDir>/$1"
		}
	},
	"packageManager": "pnpm@10.15.0"
}
